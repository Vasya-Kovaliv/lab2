class ArithmeticOperations:
    def __init__(self, a, b):
        self.a = a
        self.b = b
    
    def add(self):
        result = self.a + self.b
        print(f"Результат додавання: {result}")
    
    def subtract(self):
        result = self.a - self.b
        print(f"Результат віднімання: {result}")
    
    def modulo(self):
        result = abs(self.a) % abs(self.b)
        print(f"Результат взяття за модулем: {result}")
a = 10
b = 3
operations = ArithmeticOperations(a, b)
operations.add()
operations.subtract()
operations.modulo()
